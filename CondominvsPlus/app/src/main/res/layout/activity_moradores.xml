<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MoradoresActivity">

    <ImageView
        android:id="@+id/fotoPicker"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal" />
    <Button
        android:onClick="selecionarFoto"
        android:text="Adicionar Foto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/editNome"
        android:textSize="15sp"
        android:hint="Nome Completo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/editBloco"
        android:textSize="15sp"
        android:hint="Nro Bloco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/editApart"
        android:textSize="15sp"
        android:hint="Nro Apartamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/editFone"
        android:textSize="15sp"
        android:hint="Telefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/editCarro"
        android:textSize="15sp"
        android:hint="Modelo do Carro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/editPlaca"
        android:textSize="15sp"
        android:hint="Placa do carro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <!--<Button
        android:text="FOTO DO USUÁRIO"
        android:onClick="addFoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>-->
    <Button
        android:text="SALVAR"
        android:onClick="salvarMorador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="VOLTAR MENU"
        android:onClick="menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>